<div class="blog-comment {{comment.comment_type}}" id="blog-comment-{{comment.ID}}">
    <h5>{{comment.author.name}}
        says</h5>
    <div>{{comment.comment_content|wpautop}}</div>

    <section>
        <!-- child comments -->
        {% if post.comments %}
            <h4>
                replies
            </h4>
            <div>
                {% for cmt in comment.children %}
                    {% include "comment.twig" with {
                        comment : cmt
                    } %}
                {% endfor %}
            </div>
        {% endif %}

        <!-- comment form -->
        {% include "comment-form.twig" %}
    </section>
</div>