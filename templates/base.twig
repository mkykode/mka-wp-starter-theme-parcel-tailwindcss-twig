{% block html_head_container %}
    {% include 'html-header.twig' %}
    {% block head %}{% endblock %}
</head>
{% endblock %}

<body class="{{body_class}} h-screen" data-template="base.twig">
<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
<header>
    {% block header %}
        <div class="container mx-auto">
            <h1 class="" role="banner">
                <a class="" href="{{site.url}}" rel="home">{{site.name}}</a>
            </h1>
            <nav id="nav-main" role="navigation">
                {% include "menu.twig" with {
                    'menu' : menu.get_items
                } %}
            </nav>
            <!-- #nav -->
        </div>
    {% endblock %}
</header>

<section id="content" role="main" class="container mx-auto">
    {% if title %}
        <h1>{{title}}</h1>
    {% endif %}
    <div class="{{sidebar_class}}">
        {% block content %}
            Sorry, no content
        {% endblock %}
    </div>
    {% if sidebar %}
        <aside>
            {{sidebar}}
        </aside>
    {% endif %}
</section>

{% block footer %}
    <footer id="footer" class="container mx-auto">
        {% include 'footer.twig' %}
    </footer>
    {{ function('wp_footer') }}
{% endblock %}
</body>
</html>