{% extends "base.twig" %}

{% block content %}
    <form action="{{site.site_url}}/wp-login.php?action=postpass" method="post">
        <label for="pwbox-{{post.ID}}">Password:</label>
        <input name="post_password" id="pwbox-{{post.ID}}" type="password" placeholder="Password" size="20" maxlength="20"/>
        <input type="submit" name="Submit" value="Submit"/>
    </form>
{% endblock %}